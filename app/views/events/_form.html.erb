<%= form_with(model: event, local: true) do |f| %>
  <% if event.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this user from being saved</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :event_date %>
    <%= f.date_field :event_date %>
  </div>

  <div class="field">
    <%= f.label :event_time %>
    <%= f.time_field :event_time %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.submit "Create event" %>
  </div>
<% end %>
