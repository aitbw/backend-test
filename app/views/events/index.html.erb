<h1>Eventbook</h1>

<div class="notifications">
  <p class="notification"><%= notice %></p>
</div>

<div id="event_list">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date & time</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.title, event %></td>
          <td><%= event.event_date.strftime("%b %d") %> @ <%= event.event_time.strftime("%H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New event', new_event_path %>
